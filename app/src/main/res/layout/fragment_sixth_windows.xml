<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SixthWindows">

    <TextView
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        android:id="@+id/tv_forgot_your_password_second"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:text="Забыли пароль?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_your_number_sms"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_your_password_second"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:text="Укажите ваш номер телефона для получения смс-кода"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:drawableStart="@drawable/baseline_lock"
        android:id="@+id/et_email_two"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="Email"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/tv_your_number_sms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_corner"
        android:backgroundTint="@color/gray"
        android:padding="6dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/et_email_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        android:text="Получить код"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>