<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="32dp"
        android:id="@+id/tv_welcome_to_okai"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:text="Добро пожаловать в OKAi!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/reg_account"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome_to_okai"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Зарегистрируйте ваш аккаунт"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:drawableLeft="@drawable/baseline_account_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/et_name"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/reg_account"
        android:hint="Ваше имя"
        android:backgroundTint="@color/gray"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:padding="6dp"
        android:background="@drawable/text_corner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:drawableStart="@drawable/baseline_lock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/et_email"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        android:hint="Email"
        android:backgroundTint="@color/gray"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:padding="6dp"
        android:background="@drawable/text_corner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:drawableStart="@drawable/baseline_call"
        android:id="@+id/number_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/text_corner"
        android:backgroundTint="@color/gray"
        android:hint="Номер телефона"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_email" />

    <EditText
        android:drawableStart="@drawable/baseline_lock"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/et_pink"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/number_phone"
        android:hint="Пароль"
        android:backgroundTint="@color/gray"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:padding="6dp"
        android:background="@drawable/text_corner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:drawableStart="@drawable/baseline_lock"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/et_pink_two"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_pink"
        android:hint="Повторить пароль"
        android:backgroundTint="@color/gray"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:padding="6dp"
        android:background="@drawable/text_corner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_click"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_pink_two"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        android:text="Зарегистрироваться"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_or"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_click"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="или"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_account"
        android:layout_marginStart="42dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_or"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="У вас уже есть аккаунт?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Войти"
        android:layout_marginEnd="42dp"
        app:layout_constraintTop_toBottomOf="@id/tv_or"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>