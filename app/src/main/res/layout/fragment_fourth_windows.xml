<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FourthWindows">

    <TextView
        android:id="@+id/tv_name_2"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:text="С возвращением в OKAi!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:backgroundTint="@color/gray"
        android:layout_marginTop="28dp"
        android:padding="6dp"
        android:id="@+id/et_name_4"
        android:drawableStart="@drawable/baseline_account_box"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/text_corner"
        app:layout_constraintTop_toBottomOf="@id/tv_name_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Ваше имя"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:backgroundTint="@color/gray"
        android:id="@+id/et_pink_five"
        android:padding="6dp"
        android:layout_marginTop="28dp"
        android:drawableStart="@drawable/baseline_lock"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/text_corner"
        app:layout_constraintTop_toBottomOf="@id/et_name_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Пароль"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_click_two"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_pink_five"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="Войти"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_forgot_your_password"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_click_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Забыли пароль?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_your_password"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="У вас ещё нет аккаунта?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginEnd="16dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_your_password"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="Зарегистрироваться"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>